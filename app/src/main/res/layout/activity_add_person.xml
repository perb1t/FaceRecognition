<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18344A"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="#0D3453">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="配置信息"
            android:textColor="@color/white"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:padding="24px"
            android:src="@mipmap/left_back" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="20px">

        <ImageView
            android:id="@+id/iv_face_picture"
            android:layout_width="400px"
            android:layout_height="300px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            android:alpha="0.4"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_face_picture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="20px"
                app:cardBackgroundColor="#406DD1EE"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:text="姓名 : "
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:gravity="center_vertical"
                        android:paddingLeft="28px"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="italic" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="20px"
                app:cardBackgroundColor="#406DD1EE"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:text="性别 : "
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rg_sex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_sex_man"
                            android:layout_width="100px"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30px"
                            android:button="@null"
                            android:drawablePadding="10px"
                            android:gravity="center_vertical"
                            android:text="男"
                            android:textColor="@color/white"
                            android:textSize="24px"
                            android:textStyle="italic" />

                        <RadioButton
                            android:id="@+id/rb_sex_woman"
                            android:layout_width="100px"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20px"
                            android:button="@null"
                            android:drawablePadding="10px"
                            android:text="女"
                            android:textColor="@color/white"
                            android:textSize="24px"
                            android:textStyle="italic" />

                    </RadioGroup>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="20px"
                app:cardBackgroundColor="#406DD1EE"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:text="公司 : "
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_company"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"
                        android:gravity="center_vertical"
                        android:paddingLeft="28px"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="italic" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="20px"
                app:cardBackgroundColor="#406DD1EE"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:text="职位 : "
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_occ"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"
                        android:gravity="center_vertical"
                        android:paddingLeft="28px"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="italic" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="20px"
                app:cardBackgroundColor="#406DD1EE"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:text="电话 : "
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"
                        android:gravity="center_vertical"
                        android:inputType="phone"
                        android:paddingLeft="28px"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="italic" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/bt_add_face"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginBottom="20px"
                android:layout_marginTop="50px"
                app:cardBackgroundColor="#406DD1EE"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="38px" />

                </FrameLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>