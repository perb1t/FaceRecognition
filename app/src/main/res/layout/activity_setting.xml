<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#18344A"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="#0D3453">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="配置信息"
                android:textColor="@color/white"
                android:textSize="32px" />

            <ImageView
                android:id="@+id/bt_back"
                android:layout_width="80px"
                android:layout_height="match_parent"
                android:padding="24px"
                android:src="@mipmap/left_back" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="50px"
                android:paddingLeft="30px"
                android:paddingTop="50px">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    android:layout_marginTop="0px"
                    app:cardBackgroundColor="#405CABF1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="20px"
                            android:text="组    织 : "
                            android:textColor="@color/white"
                            android:textSize="26px"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_org"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:paddingLeft="28px"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="杭州哈智机器人"
                            android:textColor="@color/white"
                            android:textSize="26px"
                            android:textStyle="italic" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    android:layout_marginTop="20px"
                    app:cardBackgroundColor="#405CABF1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="20px"
                            android:text="欢迎词 : "
                            android:textColor="@color/white"
                            android:textSize="26px"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/tv_welcome_word"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#0000"
                            android:gravity="center_vertical"
                            android:hint="XXX会自动替换成人名"
                            android:paddingLeft="28px"
                            android:singleLine="true"
                            android:text="你好,XXX"
                            android:textColor="@color/white"
                            android:textSize="26px"
                            android:textStyle="italic" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/shadow_h"
                    android:orientation="vertical"
                    android:paddingBottom="30px"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:paddingTop="50px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_company"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="1px"
                            android:paddingBottom="10px"
                            android:paddingTop="10px"
                            android:text="公司"
                            android:textColor="@color/white"
                            android:textSize="22px" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingBottom="10px"
                            android:paddingTop="10px"
                            android:text="姓名"
                            android:textColor="@color/white"
                            android:textSize="22px" />

                        <TextView
                            android:id="@+id/tv_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingBottom="10px"
                            android:paddingTop="10px"
                            android:text="性别"
                            android:textColor="@color/white"
                            android:textSize="22px" />

                        <TextView
                            android:id="@+id/tv_occ"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingBottom="10px"
                            android:paddingTop="10px"
                            android:text="职位"
                            android:textColor="@color/white"
                            android:textSize="22px" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:paddingBottom="10px"
                            android:paddingTop="10px"
                            android:text="联系方式"
                            android:textColor="@color/white"
                            android:textSize="22px" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/white" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/lv_face_person_list"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />


                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:id="@+id/bt_add_face"
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    app:cardBackgroundColor="#406DD1EE"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="38px" />

                    </FrameLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</FrameLayout>