<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="#0D3453">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="欢迎来到哈智活动现场"
            android:textColor="@color/white"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:padding="24px"
            android:src="@mipmap/left_back" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#18344A"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="550px"
            android:layout_height="600px"
            android:layout_gravity="center_vertical">

            <com.shijiwei.xkit.widget.camera.CameraPreview
                android:id="@+id/camera_pre_view"
                android:layout_width="400px"
                android:layout_height="500px"
                android:layout_gravity="center" />

            <com.shijiwei.xkit.utility.FaceTracker
                android:id="@+id/iv_face_tracker"
                android:layout_width="400px"
                android:layout_height="500px"
                android:layout_gravity="center"
                android:background="#00000000"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_verify_status"
                android:layout_width="400px"
                android:layout_height="500px"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@mipmap/face_verify_ok"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_pre_face"
                android:layout_width="200px"
                android:layout_height="200px" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="50px">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:gravity="center"
                android:text="身份信息"
                android:textColor="@color/black"
                android:textSize="30px"
                android:visibility="gone" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="100px"
                app:cardBackgroundColor="#406DD1EE"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:text="姓名 : "
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="28px"
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="italic" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="30px"

                app:cardBackgroundColor="#406DD1EE"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:text="性别 : "
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="28px"
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="italic" />


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="30px"
                app:cardBackgroundColor="#406DD1EE"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:text="公司 : "
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="28px"
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="italic" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="30px"
                app:cardBackgroundColor="#406DD1EE"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:text="职位 : "
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_occ"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="28px"
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="italic" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="30px"
                app:cardBackgroundColor="#406DD1EE"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:text="电话 : "
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingLeft="28px"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="italic" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_marginTop="30px"
                app:cardBackgroundColor="#406DD1EE"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:text="签到时间 : "
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_sign_in_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingLeft="28px"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="26px"
                        android:textStyle="italic" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>