<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/company_"
    android:orientation="vertical"
    android:padding="20px">

    <android.support.v7.widget.CardView
        android:id="@+id/photo_frame"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_gravity="center"
        android:layout_margin="20px"
        android:alpha="0.4"
        app:cardCornerRadius="4px"
        app:cardMaxElevation="10px">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/photo_frame"
            android:scaleType="centerCrop" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="500px"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="20px"
        android:layout_weight="1"
        android:alpha="0.4"
        android:background="@mipmap/company_"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="10dp">

        <TextView
            android:id="@+id/tv_person_tags"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="120px"
            android:paddingLeft="20px"
            android:paddingBottom="20px"
            android:paddingRight="20px"
            android:textColor="@color/darkgreen"
            android:textSize="16sp"
            android:textStyle="italic" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/btn_recognition"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginTop="20px"
        android:background="@drawable/selector_button_bg_commit"
        android:gravity="center"
        android:text="验证(Recognition)"
        android:textColor="@color/white"
        android:textSize="20px"
        android:textStyle="bold" />

</LinearLayout>